
<section class="results-section">
<div class="heading">
    <h1>Results for <%= query %></h1>
</div>
  <% if (!data) { %>
    <p>No data</p>
<% } else { %>

    <ul class="results-list">
        <% data.forEach(item => { %>
            <li>
                <a href="/products/<%= item.id  %>">
                    <%= item.name %>
                    <div>
                     <img src="<%= item.image %>" 
                        srcset="<%= item.image_url %> 800w, 
                                <%= item.image_small_url %> 400w, 
                                <%= item.image_thumb_url %> 200w"
                                 alt="image of <%= item.brands %>." >
                    </div>
                </a>
            </li>
        <% }) %>
    </ul>
<% } %>

  
</section>
